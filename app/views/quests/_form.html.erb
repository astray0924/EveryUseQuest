<%= form_for(@quest) do |f| %>
  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% @quest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols=>80, :rows=>10 %>
  </div>
  <div class="field">
    <%= f.label :item %><br />
    <%= f.text_field :item, :size=>60 %>
  </div>
  <div class="field">
    <%= f.label :purpose_type %><br />
    <%= f.select :purpose_type, {'any'=>'any','to'=>'to','as'=>'as'} %>
  </div>
  <div class="field">
    <%= f.label :purpose %><br />
    <%= f.text_field :purpose, :size=>60 %>
  </div>
  <div class="field">
    <%= f.label :place %><br />
    <%= f.select :place, {'N/A'=>'N/A','dormitory'=>'dormitory','laboratory'=>'laboratory','cafe'=>'cafe','restaurant'=>'restaurant','outdoor'=>'outdoor','everywhere'=>'everywhere','etc.'=>'etc.'} %>
  </div>
  <div class="field">
    <%= f.label :ongoing %><br />
    <%= f.check_box :ongoing %>
  </div>
  <div class="field">
    <%= f.label :begin %><br />
    <%= f.datetime_select :begin, :use_month_numbers=>true, :include_seconds=>true, :start_year=>2012, :end_year=>Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :end %><br />
    <%= f.datetime_select :end, :use_month_numbers=>true, :include_seconds=>true, :start_year=>Time.now.year, :end_year=>2014 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
